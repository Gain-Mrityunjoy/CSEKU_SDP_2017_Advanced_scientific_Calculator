<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"


tools:context="com.example.gain.gain_scientific_calculator.MainActivity">


    <Button
        android:id="@+id/btn0"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="0" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="."
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        android:id="@+id/btnTenToPow"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnDot"
        android:text="x10^"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnAns"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnTenToPow"
        android:text="Ans" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnAns" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn0"
        android:layout_alignParentStart="true"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btnPlus"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAns"
        android:layout_toEndOf="@+id/btn3"
        android:text="+" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_alignBaseline="@+id/btnPlus"
        android:layout_alignBottom="@+id/btnPlus"
        android:layout_toEndOf="@+id/btnAns" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn5"
        android:text="6" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPlus"
        android:layout_toEndOf="@+id/btn6"
        android:text="X" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPlus"
        android:layout_alignStart="@+id/btnEqual"
        android:text="%" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_above="@+id/btn4"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn8"
        android:text="9" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn9"
        android:text="DEL" />

    <Button
        android:id="@+id/btnAc"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="AC"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btnDel" />

    <Button
        android:id="@+id/btnnPr"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:text="nPr"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnFactorial"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnnPr"
        android:layout_toEndOf="@+id/btnnPr"
        android:text="!" />

    <Button
        android:id="@+id/btnBracketOpen"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnFactorial"
        android:layout_toEndOf="@+id/btnFactorial"
        android:text="(" />

    <Button
        android:id="@+id/btnbracketClose"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnBracketOpen"
        android:layout_toEndOf="@+id/btnBracketOpen"
        android:text=")" />

    <Button
        android:id="@+id/btnMplus"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="M+"
        android:layout_alignBaseline="@+id/btnbracketClose"
        android:layout_alignBottom="@+id/btnbracketClose"
        android:layout_toEndOf="@+id/btnbracketClose" />

    <Button
        android:id="@+id/btnLog"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnnPr"
        android:layout_alignParentStart="true"
        android:text="log"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnLn"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnLog"
        android:layout_toEndOf="@+id/btnLog"
        android:text="ln"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnSin"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBracketOpen"
        android:layout_toEndOf="@+id/btnLn"
        android:text="sin"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnCos"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnbracketClose"
        android:layout_toEndOf="@+id/btnSin"
        android:text="cos"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnTan"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnMplus"
        android:layout_alignStart="@+id/btnMplus"
        android:text="tan"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnDif"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLog"
        android:layout_alignParentStart="true"
        android:text="d/dx"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnSquareRoot"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="√"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/btnDown"
        android:layout_alignBottom="@+id/btnDown"
        android:layout_toEndOf="@+id/btnLog" />

    <Button
        android:id="@+id/btnDown"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="▼"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/btnPow"
        android:layout_alignBottom="@+id/btnPow"
        android:layout_toEndOf="@+id/btnLn" />

    <Button
        android:id="@+id/btnPow"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCos"
        android:layout_toEndOf="@+id/btnDown"
        android:text="x^2"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnInverse"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTan"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/btnPow"
        android:text="x-1"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/textAns"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btnShift"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:text=""
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/textCal"
        android:layout_width="380dp"
        android:layout_height="86dp"
        android:text=""
        android:layout_above="@+id/textAns"
        android:layout_alignParentStart="true"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnShift"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDif"
        android:layout_alignParentStart="true"
        android:text="SHIFT" />

    <Button
        android:id="@+id/btnMode"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="MODE"
        android:layout_alignBaseline="@+id/btnRight"
        android:layout_alignBottom="@+id/btnRight"
        android:layout_toEndOf="@+id/btnPow" />

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSquareRoot"
        android:layout_toStartOf="@+id/btnDown"
        android:text="◄" />

    <Button
        android:id="@+id/btnUp"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDown"
        android:layout_toStartOf="@+id/btnPow"
        android:text="▲" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="►"
        android:layout_below="@+id/textAns"
        android:layout_toEndOf="@+id/btnDown" />
</RelativeLayout>
